<%= form_for(@data_point) do |f| %>
  <% if @data_point.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@data_point.errors.count, "error") %> prohibited this data_point from being saved:</h2>

      <ul>
      <% @data_point.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
  <label class="label">Point Type</label>
    <p class="control">
      <span class="select">
        <select>
          <% DataPoint::POINT_TYPES.each do |x| %>
            <option><%= x %></option>
          <% end %>

        </select>
      </span>
    </p>
  </div>
  <div class="container">
    <div class="inner first">Hello</div>
  </div>
  <div class="field">
    <%= f.label :point_value %><br>
    <%= f.number_field :point_value %>
  </div>
  <div class="field">
    <%= f.label :aux_data %><br>
    <%= f.text_area :aux_data %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<script>
$("#data_point_point_type").change(function () {
  var selected = $('#data_point_point_type').val();
  switch(selected){
    case "Sales":
      $( "div.inner" ).replaceWith( "How many outstanding proposals are there?" );
      break;
    case "Implementation":
      $( "div.inner" ).replaceWith( "prob wont work" );
      break;
    case "Ongoing":
      $( "div.inner" ).replaceWith( "did work" );
      break;
  }
});
</script>
